<% include ../partials/header %>
<h1>Enhance your profile</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <form action="/profile/edit" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" class="form-control" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="lastname">Lastname</label>
          <input type="text" name="lastname" class="form-control" placeholder="Lastname">
        </div>
        <div class="form-group">
          <label for="telephone">Telephone</label>
          <textarea id="description" name="telephone" class="form-control" placeholder="1234567890"></textarea>
        </div>
        <div class="form-group">
          <button type="submit">Upload a picture...</button>
        </div>
        <div class="form-group">
          <label for="campus">Campus</label><br>
          <select name="campus" id="campus">
            <% campusTypes.forEach((campus) => { %>
              <option type="text" value="<%= campus %>" class="form-control"><%= campus %></option>
            <%  }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="department">Department</label><br>
          <select name="department" id="department">
            <% departmentTypes.forEach((department) => { %>
              <option type="text" value="<%= department %>" class="form-control"><%= department %></option>
            <%  }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="skills">Your main skills</label>
          <textarea id="skills" name="skills" class="form-control" placeholder="skill1, skill2, skill3"></textarea>
        </div>
        
        <div class="form-group">
          <button type="submit">Submit changes</button>
        </div>
      </form>
    </div>
  </div>
</div>