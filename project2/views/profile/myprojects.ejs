<% include ../partials/header %>
    <h1>Your activity</h1>
    <div class="project-row row">
        <h2 class="text-center">Current projects</h2>
        <!-- cambiar -->
        <% users.projects.forEach((project) => { %>
            <div class="col-sm-3 home-project-box">
                <img src="<%= project.image %>">
                <div class="project-info-wrapper">
                    <a class="title" href="/profile/project/<%= project._id %>">
                        <strong><%= project.name %></strong>
                    </span>
                    <br>
                    <div>
                        <h5>Description:</h5>
                        <span class="light-text description"><%= project.description %></span>
                        <br>
                    </div>
                    <div>
                        <h5>Keywords:</h5>
                        <span class="light-text description"><%= project.keywords %></span>
                    </div>
                </div>
            </div>
            <%  }) %>
    </div>
