<div class="container project-container">
  <div class="row">
    <div class="col-sm-2">
      <img src="https://ksr-ugc.imgix.net/assets/007/188/910/68df9ec3603e3f3138bed402dea3cab2_original.jpg?w=80&h=80&fit=crop&v=1466566705&auto=format&q=92&s=eff05acf65569368cc99f6363722fe60"><br>
      By: <strong><%= project.admin.username %></strong>
    </div>
    <div class="col-sm-10">
      <h1><%= project.name %></h1>
      <p class="project-description"><%= project.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <img class="project-image" src="<%= project.image %>">
    </div>
    <div class="col-sm-4 project-info">
      <div class="project-progress">
        <progress value="<%= project.totalPledged %>" max="<%= project.goal %>"></progress>
      </div>
      <div class="project-backers">
        <strong class="large-strong"><%= project.contributors %></strong><br>
        <span class="light-text">Contributors</span>
      </div>
      <a class="btn backer-btn" href="/projects/<%= project._id%>/rewards">Back This Project</a>
    </div>
  </div>
</div>