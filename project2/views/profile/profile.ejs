<% include ../partials/header %>
    <div class="info-container">
        <div class="welcome-msg">
            <div class="user-pic-profile">
                <img id="profilepic" src="<%= user.pic_path %>" alt="<%= user.pic_name %>" />
                <div class="hello">
                    Hello&nbsp;&nbsp;
                </div>
                <div class="username">
                    <%
                        if(user.name){%>
                        <%= user.name %>
                            <% } else {%>
                                <%= user.username%>
                                    <% } %>
                </div>
            </div>
        </div>
        <form action="/profile" method="post" enctype="multipart/form-data">
            <div class="pic-button">
                <input class="choose-pic-button" type="file" name="photo">
                <button class="upload-pic-button" type="submit"><span class="glyphicon glyphicon-upload"></span></button>
            </div>

        </form>


        <div class="user-options">
            <div class="option-box">
                <a href="/profile/newproject">Start a project&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-list-alt"></span></a>
            </div>
            <div class="option-box">
                <a href="/profile/myprojects">My Projects&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-folder-open"></span></a>
            </div>
            <div class="option-box">
                <a href="/profile/projects">All Projects&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-folder-open"></span></a>
            </div>
            <div class="option-box">
                <a href="/profile/requests">Pending requests&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-transfer"></span></a>
            </div>

        </div>

    </div>
